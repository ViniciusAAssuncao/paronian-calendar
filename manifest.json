{
  "manifest_version": 3,
  "name": "Relógio Hadabiano",
  "version": "1.0.0",
  "description": "Exibe a data e hora atual do Calendário Paroniano/Hadabiano",
  "permissions": [],
  "host_permissions": [
    "https://hadab-calendar-api.workers.dev/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
